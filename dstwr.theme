function theme_preprocess_html(&$variables) {
  $viewport = [
    '#tag' => 'meta',
    '#attributes' => [
      'name' => 'viewport',
      'content' => 'width=device-width, initial-scale=1, viewport-fit=cover'
    ]
  ];

  $variables['page']['#attached']['html_head'][] = [$viewport, 'viewport'];
}
