function dstwr_page_attachments_alter(&$vars) {
  $viewport = [
    '#type' => 'html_tag',
    '#tag' => 'meta',
    '#attributes' => [
      'name' => 'viewport',
      'content' => 'width=device-width, initial-scale=1, viewport-fit=cover'
    ]
  ];

  $vars['#attached']['html_head'][] = [$viewport, 'viewport'];
}
